---
import { getCurrentLocale, getTranslation } from '../utils/translations';
import SectionHead from './SectionHead.astro';

const locale = getCurrentLocale(Astro.url);
const t = getTranslation(locale);
---

<section id="benefits">
  <div class="container">
    <SectionHead 
      title={t.benefits.title}
      description={t.benefits.description}
    />

    <div class="benefits-grid">
      <div class="adv">
        <i></i>
        <div>
          <h4>{t.benefits.items.first}</h4>
          <p>{t.benefits.items.first_desc}</p>
        </div>
      </div>

      <div class="adv">
        <i></i>
        <div>
          <h4>{t.benefits.items.products}</h4>
          <p>{t.benefits.items.products_desc}</p>
        </div>
      </div>

      <div class="adv">
        <i></i>
        <div>
          <h4>{t.benefits.items.stores}</h4>
          <p>{t.benefits.items.stores_desc}</p>
        </div>
      </div>

      <div class="adv">
        <i></i>
        <div>
          <h4>{t.benefits.items.certification}</h4>
          <p>{t.benefits.items.certification_desc}</p>
        </div>
      </div>
    </div>
  </div>
</section>