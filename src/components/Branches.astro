---
import { getCurrentLocale, getTranslation } from '../utils/translations';
import SectionHead from './SectionHead.astro';

const locale = getCurrentLocale(Astro.url);
const t = getTranslation(locale);
---

<section id="branches">
  <div class="container">
    <SectionHead 
      title={t.branches.title}
      description={t.branches.description}
    />

    <div class="map" aria-label={t.branches.map} :aria-label="ariaLabel"></div>

    <div class="cities">
      <span class="pill">{t.branches.cities[0]}</span>
      <span class="pill">{t.branches.cities[1]}</span>
      <span class="pill">{t.branches.cities[2]}</span>
      <span class="pill">{t.branches.cities[3]}</span>
      <span class="pill">{t.branches.cities[4]}</span>
      <span class="pill">{t.branches.cities[5]}</span>
      <span class="pill">{t.branches.cities[6]}</span>
      <span class="pill">{t.branches.cities[7]}</span>
      <span class="pill">{t.branches.cities[8]}</span>
      <span class="pill">{t.branches.cities[9]}</span>
    </div>
  </div>
</section>