---
import { getCurrentLocale, getTranslation } from '../utils/translations';
import SectionHead from './SectionHead.astro';

const locale = getCurrentLocale(Astro.url);
const t = getTranslation(locale);
---

<section id="contact">
  <div class="container">
    <SectionHead 
      title={t.contact.title}
      description={t.contact.description}
    />

    <form id="contact-form" method="POST" action="/api/contact-form">
      <input type="text" name="name" placeholder={t.contact.form.name} required>
      <input type="tel" name="phone" placeholder={t.contact.form.phone} required>
      <input type="email" name="email" class="full" placeholder={t.contact.form.email}>
      <textarea name="message" class="full" placeholder={t.contact.form.message}></textarea>
      <div class="full">
        <button class="btn btn-primary" type="submit">{t.contact.form.submit}</button>
        <div class="form-note">{t.contact.form.note}</div>
      </div>
    </form>
  </div>
</section>