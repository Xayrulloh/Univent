---
import { getCurrentLocale, getTranslation } from '../utils/translations';

const locale = getCurrentLocale(Astro.url);
const t = getTranslation(locale);
---

<section class="hero">
  <div class="container wrap">
    <div class="hero-left">
      <span class="eyebrow">{t.hero.eyebrow}</span>
      <h1>{t.hero.title}</h1>
      <p class="subtitle">{t.hero.description}</p>
      <div class="cta">
        <a href="#products" class="btn btn-primary">{t.hero.cta.catalog}</a>
        <a href="#contact" class="btn btn-ghost">{t.hero.cta.contact}</a>
      </div>
      <div class="hero-stats">
        <div class="stat"><strong>1500+</strong><span>{t.hero.stats.products}</span></div>
        <div class="stat"><strong>15+</strong><span>{t.hero.stats.stores}</span></div>
        <div class="stat"><strong>№1</strong><span>{t.hero.stats.leader}</span></div>
      </div>
    </div>
    <div class="hero-right">
      <div class="art" role="img" aria-label="Визуализация потока воздуха"></div>
    </div>
  </div>
</section>